<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">


<div class="main-content">
  <div class="container mt-7">
    <!-- Table -->
    <div class="row">

      <div class="col">
        <div class="card shadow">
          <div class="card-header border-0">
            <h3 class="mb-0 d-flex justify-content-center">ORDER HISTORY</h3>
          </div>
          <div class="table-responsive">
            <table class="table align-items-center table-flush" id="orderManagement">
              <thead class="thead-light">
                <tr>
                  <th scope="col">PRODUCT</th>
                  <th scope="col">QUANTITY</th>
                  <th scope="col">TOTAL PRICE</th>
                  <th scope="col">STATUS</th>
                  <th scope="col">DATE OF ORDER</th>
                </tr>
              </thead>
              <tbody>
                {{#each userorders}}
                {{#each this.Orderitems}}
                 <tr onclick="location.href='/orderdetails/{{../this._id}}'"> 
                  <th scope="row">
                    <div class="media align-items-center">
                      <a href="#" class="avatar rounded-circle mr-3">
                        <img alt="Image placeholder" src="/product-images/{{this.product._id}}.jpg"
                          style="width:100% ;height:5rem">
                      </a>
                      <div class="media-body">
                        <span class="mb-0 text-sm">{{this.product.Name}}</span>
                      </div>
                    </div>
                  </th>
                  <td>
                    <span>{{this.quantity}} x {{this.product.Price}}</span>
                  </td>
                  <td>
                    {{subTotal this.product.Price this.quantity}}
                  </td>
                  <td>
                    <span class="badge badge-dot mr-4">
                      <i class="bg-warning"></i> {{../ this.Deliverystatus}}
                    </span>
                  </td>
                  <td>
                    {{date ../this.createdAt}}
                  </td>
                </tr>
                {{/each}}
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $('#orderManagement').DataTable();
  });
</script>